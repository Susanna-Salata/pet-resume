        <div class='card'>
          <img src={{image}} alt='' class='card-top-img' />
          <div class='card-body'>
            <div class='card-title'>
              <h5>{{goodsBlock.cards.title}}</h5>
              <p class='card-text'>{{goodsBlock.cards.text}}</p>

              {{#if isHot}}
                <span class='badge text-bg-warning rounded-pill'>
                  HOT
                </span>
              {{/if}}

              {{#if isNew}}
                <span class='badge text-bg-primary rounded-pill'> 
                  NEW
                </span>
              {{/if}}

            </div>
            <p>{{description}}</p>
          </div>
        </div>
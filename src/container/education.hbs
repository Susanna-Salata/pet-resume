{{!-- 
Це код container файлу для education сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/education"
--}}

<div>
    {{#with main}}
        <main>
            <section>
                {{> title data="Education" big=true}}
                <ul>
                    {{#each education}}
                    <li> 
                        {{name}}
                        
                        {{#if years includeZero=true}} ({{years}}) {{/if}}
                        
                        {{#unless isEnd}}
                            {{#if years isEnd=false}} (in progress) {{/if}}
                        {{/unless}}
                        
                    </li>
                    {{/each}}
                </ul>
            </section>

            <section>
                {{> title data="Certificates" big=false}}
                <ol>
                    {{#each certificates}}
                    <li>
                        {{name}} ({{id}})
                    </li>
                    {{/each}}
                </ol>
            </section>
        </main>
    {{/with}}
</div>


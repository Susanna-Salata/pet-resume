{{!-- 
Це код container файлу для js сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/js"
--}}

<div>
  <h1>{{name}}</h1>
  <p>{{description}}</p>

  <h2>History</h2>
  <p>Year: {{history.year}}</p>
  <p>Founder: {{history.founder}}</p>

  <h2>Types</h2>
  <ul>
    {{#each types}}
      <li>{{this}}</li>
    {{/each}}
  </ul>

  <h2>Syntax</h2>
  <ul>
    <li>Variables: {{syntax.variables.[0]}}, {{syntax.variables.[1]}}, {{syntax.variables.[2]}}</li>
    <li>Functions: {{syntax.functions.[0]}}</li>
    <li>Conditionals: {{syntax.conditionals.[0]}}, {{syntax.conditionals.[1]}}, {{syntax.conditionals.[2]}}</li>
    <li>Loops: {{syntax.loops.[0]}}, {{syntax.loops.[1]}}, {{syntax.loops.[2]}}</li>
    <li>Classes: {{syntax.classes.[0]}}</li>
  </ul>

  <h2>Features</h2>
  <ul>
    {{#each features}}
      <li>{{this}}</li>
    {{/each}}
  </ul>

  <h2>Libraries</h2>
  <ul>
    {{#each libraries}}
      <li>{{this}}</li>
    {{/each}}
  </ul>

  <h2>Tools</h2>
  <ul>
    {{#each tools}}
      <li>{{this}}</li>
    {{/each}}
  </ul>

  <h2>Community</h2>
  <ul>
    {{#each community}}
      <li>{{name}} ({{type}})</li>
    {{/each}}
  </ul>

</div>


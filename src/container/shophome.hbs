{{!-- 
Це код container файлу для task41 сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/task41"
--}}

<main>
  <div>

  <section class='mt-3'>
    <h2 class='text-center'>
      <b>{{newsBlock.title}}</b>
    </h2>

    <div class='row g-2 mt-2'>
      {{#each newsBlock.cards}}
        <div class='col-3'>
          <div class='card text-bg-dark'>
            <div class='card-header text-center'>
              <b>{{title}}</b>
              {{#if isNew}}
                <span class='badge text-bg-success rounded-pill'> 
                  New
                </span>
              {{/if}}

              {{#if isTop}}
                <span class='badge text-bg-danger rounded-pill'>
                    Top
                  </span>
              {{/if}}
            </div>
            <p class='card-body'>{{description}}</p>
          </div>
        </div>
      {{/each}}
    </div>

  </section>

  <hr class='my-5' />

  <section class='row'>
    <nav class='col-12 nav nav-tabs mb-3'>
      {{#each goodsBlock.tabs}}

        <a href='#' class='nav-link 
        {{#if isActive}}active{{/if}}
        {{#if isDisabled}}
        text-succesery
        disabled
        {{/if}}
        '>{{text}}</a>

      {{/each}}
    </nav>

    {{#each goodsBlock.cards}}
      <div class='col-4 g-4'>

        {{> shopcard}}

      </div>
    {{/each}}
  </section>

  <hr class='my-5' />

  <section class='alert text-bg-dark'>
    {{#with subscribe}}
      <h2>{{header}}</h2>
      <div>
        <p>{{description}}</p>
        <div class="my-2">
          <a href={{buttons.0.link}} class='btn btn-primary'>
            {{buttons.0.text}}
          </a>
        </div>
        
        <div class="my-2">
          <a href={{buttons.1.link}} class='btn btn-primary'>
            {{buttons.1.text}}
          </a>
        </div>
      </div>

    {{/with}}
  </section> 

  <hr class='my-5' />


  </div>
</main>




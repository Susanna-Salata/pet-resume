{{!-- 
Це код container файлу для work сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/work"
--}}

<div>
    {{#with main}}
        <main>
            <section>
                {{> title data="Work history" big=true}}
                <div>
                    <ul>
                        {{#each works}}
                            <li>
                                <div> {{position}} </div>

                                <br>

                                <div> {{duration.from}} - 
                                        {{#if duration.to}} 
                                            {{duration.to}} 
                                        {{else}} 
                                            (now) 
                                        {{/if}} </div>

                                <br>
                                {{#if company.url}}
                                    <div> {{> link text=company.name href=company.url blank=true noLine=true}} </div>
                                {{else}}
                                    <div><b> {{company.name}} </b></div>
                                {{/if}}
                                <br>
                                <br>

                                <div> <strong> Projects ({{projectAmount}}) </strong> </div>
                                <div> <strong> Project stacks ({{stackAmount}}) </strong> </div>
                                <br>

                                <ul>
                                    {{#each projects}}
                                        <li>
                                            <div> {{> link text=name href=url blank=true noLine=true}} </div>
                                                <div>
                                                    <p>About: </p>
                                                    <p> {{about}} </p>
                                                </div>
                                                
                                                <div>
                                                <p>Project stack:</p>
                                                <ul>
                                                    {{#each stack}}
                                                    <li> {{this}} </li>
                                                    {{/each}}
                                                </ul>
                                                </div>

                                                <div>
                                                    <em>Project awards</em>
                                                    <ul>
                                                        {{#each awards}}
                                                            <li> {{name}} </li>
                                                        {{/each}}
                                                    </ul>
                                                </div>
                                            </div>
                                        </li>
                                        <br>
                                    {{/each}}
                                </ul>
                            </li>
                            <br>
                        {{/each}}
                    </ul>
                </div>
            </section>
        </main>
    {{/with}}
</div>


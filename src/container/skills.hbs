{{!-- 
Це код container файлу для skills сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/skills"
--}}

<div>
    {{#with main}}
        <main>
            <section>
                {{> title data="Skills" big=true}}
                <ul>
                    {{#each skills}}
                        <li> 
                            {{name}}

                            {{#if point includeZero=true}} ({{point}}) {{/if}}
                            {{#if isTop}} (top) {{/if}}

                            {{#unless point}} 
                                {{#if point includeZero=true}} (in progress) {{/if}}
                            {{/unless}}

                            {{#unless point includeZero=true}} (not studying) {{/unless}}

                        </li>
                    {{/each}}
                </ul>
            </section>

            <section>
                {{> title data="Hobbies" big=false}}
                <ol>
                    {{#each hobbies}}
                    <li>
                        {{name}}

                        {{#if isMain}} (favourite) {{/if}}
                    </li>
                    {{/each}}
                </ol>
            </section>

        </main>
    {{/with}}
</div>


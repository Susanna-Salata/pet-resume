{{!-- 
Це код container файлу для shoporder сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/shoporder"
--}}

<main>
<div class="container">
<div class="row">
  <div class="col-md-12">
    
  <h1 class="mb-5">{{header}}</h1>
    
    {{!-- contacts_data --}}

  <div class="row">
    <div class="col-md-8">

      <div class="card">
        <div class="card-body">

          <div>
            <section>
              <h2>{{contacts_data.title}}</h2>
              <div>
                <button class="btn btn-warning"> {{contacts_data.buttons.0.text}} </button>
              </div>

              <div>
                <button class="btn btn-outline-warning"> {{contacts_data.buttons.1.text}} </button>
              </div>

            </section>
          </div>

          <form>
          {{#with contacts_data.form.input}}
            <div class="row">
              <div class="col">
                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <label for="surname">{{surname.label}}</label>
                      <input type="text" class="form-control"  placeholder={{surname.placeholder}}>
                      <small class="form-text text-muted">{{surname.caption}}</small>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col">
                    <div class="form-group">
                      <label for="name">{{name.label}}</label>
                      <input type="text" class="form-control" placeholder={{name.placeholder}}>
                      <small class="form-text text-muted"> {{name.caption}} </small>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label for="phone">{{phone.label}}</label>
                  <input type="text" class="form-control" placeholder={{phone.placeholder}}>
                  <small class="form-text text-muted">{{phone.caption}}</small>
                </div>
                
                <div class="form-group">
                  <label for="email">{{email.label}}</label>
                  <input type="email" class="form-control" placeholder={{email.placeholder}}>
                  <small class="form-text text-muted">{{email.caption}}</small>
                </div>
              </div>
            </div>
          {{/with}}

          {{#with contacts_data.form.switch}}
            <div class="form-group">
              <div class="form-switch">
                <input type="checkbox" class="form-check-input" >
                <label class="form-check-label" >{{0.text}}</label>
              </div>
              <div class="form-switch">
                <input type="checkbox" class="form-check-input"  checked>
                <label class="form-check-label" >{{1.text}}</label>
              </div>
            </div>
          {{/with}}
          </form>

        </div>
      </div>

    </div>
  </div>

<br>
    <hr>

{{!-- delivery bloc --}}

<div class="row">
  <div class="col-md-8">

  <h2 class="mt-2"> {{delivery.title}} </h2>

{{#with delivery.select}}
    <form>
      <div class="form-control">
        <label for="city">{{0.label}}</label>
        <select class="form-select" id="city">
          <option value="">{{0.placeholder}}</option>

          {{#each 0.options}}
            <option value="{{value}}">{{text}}</option>
          {{/each}}

        </select>
      </div>

      <div class="form-control mt-2" >
        <label for="district">{{1.label}}</label>
        <select class="form-select" id="district">
          <option value="">{{1.placeholder}}</option>

          {{#each 1.options}}
            <option value="{{value}}">{{text}}</option>
          {{/each}}

        </select>
      </div>
  </form>
{{/with}}

{{#with delivery.delivery_type}}
  <form>
      <div class="form-control mt-2" >

        <label for="deliveryType">{{label}}</label>
        <select class="form-select" id="deliveryType">
          <option value="">{{placeholder}}</option>

          {{#each options}}
            <option value="{{value}}">{{type}}</option>
          {{/each}}

        </select>
      </div>
  </form>
{{/with}}
</div>


<br>
<hr>
<br>


  <div class="row">
    <div class="col-md-8">
      {{#with delivery.payment}}
        <h2 class="mt-2"> {{title}} </h2>
        <div>
          <div class="form-group">
            <div class="form-check">
              
              {{#each list}}
              <div>
                <input class="form-check-input" type="radio" >{{type}}</input>
                <label class="form-check-label">
                   {{description}}
                </label>
              </div>
              {{/each}}

            </div>

          </div>
        </div>
      {{/with}}
    </div>
  </div>
</div>


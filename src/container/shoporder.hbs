      {{!-- action_block --}}


<div class="container">
  <div>
    <div class="row">
      <div class="col-md-4">
          <div class="card">
            <div class='col-md-4'>
              <div class="card-body">
                {{#each action_block}}
                  {{#if this.isSuccess}}
                    <button class="btn btn-success">{{this.text}}</button>
                  {{else if this.isDanger}}
                    <button class="btn btn-danger">{{this.text}}</button>
                  {{else if this.isInfo}}
                    <button class="btn btn-info">{{this.text}}</button>
                  {{else}}
                    <button class="btn btn-outline-warning">{{this.text}}</button>
                  {{/if}}
                {{/each}}
              </div>
            </div>
          </div>

          {{#with total}}
          <div class="card">
            <div class='card-body'>
              <h3 class='card-title'>{{title}}</h3>
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Назва</th>
                    <th scope="col">Ціна</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>{{item_list.0.name}}</td>
                    <td>{{item_list.0.price}}</td>
                  </tr>
                  <tr>
                    <td>{{item_list.1.name}}</td>
                    <td>{{item_list.1.price}}</td>
                  </tr>
                  <tr>
                    <td>{{item_list.2.name}}</td>
                    <td>{{item_list.2.price}}</td>
                  </tr>
                </tbody>
              </table>

              <ul class="list-group">
                <li class="list-group-item">{{additional_info.0.text}}: {{additional_info.0.value}}</li>
                <li class="list-group-item">{{additional_info.1.text}}: {{additional_info.1.value}}</li>
                <li class="list-group-item">{{additional_info.2.text}}: {{additional_info.2.value}}</li>
              </ul>
              
              <strong>Загальна вартість: {{total_price.value}}</trong>
              
              <button class="btn btn-primary">{{button.0.text}}</button>
              <button class="btn btn-outline-primary">{{button.1.text}}</button>
            </div>
          </div>
          {{/with}}
        </div>
      <div>
    </div>
  </div>
</div>


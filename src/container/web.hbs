{{!-- 
Це код container файлу для web сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/web"
--}}

<div>
<ul>
  {{#each web.languages}}
    <li>
      <h3>{{name}} {{version}}</h3>
      <p>{{description}}</p>
      {{#if elements}}
        <h4>Elements</h4>
        <ul>
          {{#each elements}}
            <li>
              <h5>{{name}}</h5>
              <p>{{description}}</p>
              {{#if attributes}}
                <h6>Attributes</h6>
                <ul>
                  {{#each attributes}}
                    <li><strong>{{name}}:</strong> {{description}}</li>
                  {{/each}}
                </ul>
              {{/if}}
            </li>
          {{/each}}
        </ul>
      {{/if}}
      {{#if properties}}
        <h4>Properties</h4>
        <ul>
          {{#each properties}}
            <li>
              <h5>{{name}}</h5>
              <p>{{description}}</p>
              {{#if values}}
                <h6>Values</h6>
                <ul>
                  {{#each values}}
                    <li><strong>{{value}}:</strong> {{description}}</li>
                  {{/each}}
                </ul>
              {{/if}}
            </li>
          {{/each}}
        </ul>
      {{/if}}
      {{#if functions}}
        <h4>Functions</h4>
        <ul>
          {{#each functions}}
            <li>
              <h5>{{name}}</h5>
              <p>{{description}}</p>
              {{#if parameters}}
                <h6>Parameters</h6>
                <ul>
                  {{#each parameters}}
                    <li><strong>{{name}} ({{type}}):</strong> {{description}}</li>
                  {{/each}}
                </ul>
              {{/if}}
            </li>
          {{/each}}
        </ul>
      {{/if}}
    </li>
  {{/each}}
</ul>
</div>

